{{#if page.attributes.next}}
  {{#if page.attributes.previous}}
    {{#unless page.home}}
      <div class="bottom-links">
        <div><a class="bottom-link" href="{{site.path}}{{page.attributes.previous}}"><i class="icofont-double-left icofont-3x"></i>{{{page.attributes.previous-title}}}</a></div>
        <div><a class="bottom-link" href="{{site.path}}{{page.attributes.next}}">{{{page.attributes.next-title}}}<i class="icofont-double-right icofont-3x"></i></a></div>
      </div>
    {{/unless}}
  {{else}}
    {{#unless page.home}}
      <div class="bottom-links">
        <div><a class="bottom-link" href="{{site.path}}{{page.previous.url}}"><i class="icofont-double-left icofont-3x"></i>{{{page.previous.content}}}</a></div>
        <div><a class="bottom-link" href="{{site.path}}{{page.attributes.next}}">{{{page.attributes.next-title}}}<i class="icofont-double-right icofont-3x"></i></a></div>
      </div>
    {{/unless}}
  {{/if}}
{{else if page.attributes.previous}}
  {{#unless page.home}}
    <div class="bottom-links">
      <div><a class="bottom-link" href="{{site.path}}{{page.attributes.previous}}"><i class="icofont-double-left icofont-3x"></i>{{{page.attributes.previous-title}}}</a></div>
      <div><a class="bottom-link" href="{{site.path}}{{page.next.url}}">{{{page.next.content}}}<i class="icofont-double-right icofont-3x"></i></a></div>
    </div>
  {{/unless}}
{{else}}
  {{#unless page.home}}
    <div class="bottom-links">
      <div><a class="bottom-link" href="{{site.path}}{{page.previous.url}}"><i class="icofont-double-left icofont-3x"></i>{{{page.previous.content}}}</a></div>
      <div><a class="bottom-link" href="{{site.path}}{{page.next.url}}">{{{page.next.content}}}<i class="icofont-double-right icofont-3x"></i></a></div>
    </div>
  {{/unless}}
{{/if}}






